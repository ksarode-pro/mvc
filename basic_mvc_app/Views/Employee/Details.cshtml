@model Employee
@{
    ViewData["Title"] = "Employee Details";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">

        </div>
        <table class="table table-bordered">
            <thead>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
            </thead>
            <tbody>

                <tr>
                    <td>
                        @Model.Id
                    </td>
                    <td>
                        @{
                            var FullName = @Model.FirstName + " " + @Model.LastName;
                        }
                        @FullName
                    </td>
                    <td>
                        @Model.Email
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
    <div class="row">
        <a class="btn btn-small btn-primary" asp-controller="Employee" asp-action="Index">Back to Employee List</a>
    </div>
</div>
